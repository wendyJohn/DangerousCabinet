<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">//第一组item 圆角边框。
    <item>
        <shape>
            <stroke android:width="1dp"
            android:color="#D5D5D5" /> //边框线颜色
            <corners android:radius="10dp" />
            //圆角度数 <solid android:color="#ffffff">//背景颜色</solid>
            <padding android:right="5dp" />
            //边距
        </shape>
    </item>
    //第二组item 插入图片(替换spinner默认箭头)
    <item>
        <bitmap android:gravity="end"
        android:src="@drawable/down" />
        //箭头图片
    </item>
</layer-list>
