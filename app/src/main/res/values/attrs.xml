<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--最好是自定义View的类名，查看起来一目了然-->
    <declare-styleable name="PwdEditText">
        <attr name="length" format="integer" />
        <attr name="password" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ParticleView">
        <attr name="pv_count" format="integer" />
        <attr name="pv_alpha" format="integer" />
        <attr name="pv_min_size" format="integer" />
        <attr name="pv_max_size" format="integer" />
        <attr name="pv_color" format="color" />
        <attr name="pv_background" format="reference" />
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="step_count" format="integer"/>
        <attr name="step_finish_color" format="color"/>
        <attr name="step_unfinish_color" format="color"/>
        <attr name="step_number_text_size" format="dimension"/>
        <attr name="step_bottom_text_size" format="dimension"/>
        <attr name="step_txt_margin_top" format="dimension"/>
        <attr name="step_circle_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CodeEditView">
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="integer"/>
        <attr name="borderSize" format="integer"/>
        <attr name="borderMargin" format="integer"/>
        <attr name="borderNum" format="integer"/>

    </declare-styleable>
</resources>